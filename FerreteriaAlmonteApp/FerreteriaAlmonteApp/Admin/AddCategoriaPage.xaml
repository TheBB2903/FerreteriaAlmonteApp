<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerreteriaAlmonteApp.AddCategoriaPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Margin="10,0">
            <Label Text="Categoria"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="30"
                TextColor="#2196F3" 
                FontFamily="Neusa Next Std" 
                FontAttributes="Bold"/>

            <Entry
                x:Name="descripcionEntry"
                Placeholder="Descripcion"
                PlaceholderColor="#2196F3"
                TextColor="#2196F3"
                FontSize="16" 
                FontFamily="Segoe UI"></Entry>

            <Button
                x:Name="categoriaButton"
                Text="Registrar"
                Clicked="categoriaButton_Clicked"
                CornerRadius="20" 
                Margin="15,15"
                BackgroundColor="#2196F3"
                HeightRequest="50" 
                VerticalOptions="End"
                FontSize="20"
                TextColor="White" 
                FontFamily="Neusa Next Std" 
                FontAttributes="Bold"></Button>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>